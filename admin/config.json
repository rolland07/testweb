{
  "backend": {
    "name": "git-gateway",
    "branch": "main"
  },
  "media_folder": "img/blog",
  "public_folder": "/img/blog",
  "collections": [
    {
      "name": "posts",
      "label": "Blog",
      "folder": "post",
      "create": true,
      "slug": "{{slug}}",
      "fields": [
        { "label": "Title", "name": "title", "widget": "string" },
        { "label": "Date", "name": "date", "widget": "datetime" },
        { "label": "Image", "name": "image", "widget": "image" },
        { "label": "Body", "name": "body", "widget": "markdown" }
      ]
    }
  ]
}
